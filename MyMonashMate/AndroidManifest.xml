<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.monash.mymonashmate"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="19" />
    
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/my_monash_mate_icon"
        android:label="@string/app_name"
         >
        <activity
            android:name="com.monash.mymonashmate.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.monash.mymonashmate.SignUpActivity"
            android:label="@string/title_activity_sign_up"
            android:theme="@style/CustomSignUpActionBar" />
         <activity
            android:name="com.monash.mymonashmate.DashboardDesignActivity"
            android:label="@string/dashboard_actionbar"
            android:theme="@style/CustomActionBarTheme" >
        </activity>
        <activity
            android:name="com.monash.mymonashmate.MateActivity"
            android:label="@string/app_name"
            android:theme="@style/CustomActionBarTheme" >
        </activity>
        <activity
            android:name="com.monash.mymonashmate.ProfileCreateActivity"
            android:label="@string/app_name"
            android:theme="@style/CustomActionBarTheme" >
        </activity>
        <activity
            android:name="com.monash.mymonashmate.SearchCriteriaActivity"
            android:label="@string/app_name"
            android:theme="@style/CustomActionBarTheme" >
        </activity>
        <activity
            android:name="com.monash.mymonashmate.PermissionActivity"
            android:label="@string/app_name"
            android:theme="@style/CustomActionBarTheme" >
        </activity>
        <activity
            android:name="com.monash.mymonashmate.ProfileUpdateActivity"
            android:label="@string/app_name"
            android:theme="@style/CustomActionBarTheme" >
        </activity>
    </application>

</manifest>
