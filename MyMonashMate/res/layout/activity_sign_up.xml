<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.monash.mymonashmate.SignUpActivity"
    tools:ignore="MergeRootFrame" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#85aab7" >
        
             <LinearLayout
        android:id="@+id/sign_up_top_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20.0dip"
        android:orientation="horizontal"
        android:layout_marginLeft="18.0dip"
    	android:layout_marginRight="18.0dip" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/sign_up" />

            <Button
                android:id="@+id/signUpButton"
                android:layout_width="match_parent"
                android:layout_height="35dip"
                android:background="@drawable/rounded_button"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:text="Sign Up"
                android:textSize="10sp"
            	android:textColor="#FFFFFF" />
    </LinearLayout>

     <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="18.0dip"
            android:layout_marginRight="18.0dip"
            android:orientation="vertical"
            android:layout_below="@+id/sign_up_top_linearLayout"
            android:background="@drawable/rounded_background" >
            
                <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right" 
        android:layout_weight="1">



                        <TextView
                            android:id="@+id/sign_up_username_text"
                            android:layout_width="wrap_content"
                            android:layout_height="35dip"
                            android:gravity="right|center_vertical"
                            android:layout_gravity="right"
                            android:layout_weight="1"
                            android:layout_marginRight="8.0dip"
                            android:text="Username"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp" />

                        <EditText
                            android:id="@+id/sign_up_username"
                            android:layout_width="120dip"
                            android:layout_height="35dip"
                            android:background="@drawable/rounded_input"
                            android:ems="10"
                            android:imeOptions="actionDone"
                            android:inputType="text"
                            android:singleLine="true"
                            android:textSize="10sp"
                            android:layout_weight="1"
                            android:layout_gravity="right" />
		
          </LinearLayout>
          
                    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip"
        android:orientation="horizontal" >
            	
    	
           <TextView
            android:id="@+id/sign_up_password_text"
            android:layout_width="wrap_content"
            android:layout_height="35dip"
            android:gravity="right|center_vertical"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:layout_marginRight="8.0dip"
            android:text="Password"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />
            
        <EditText
            android:id="@+id/sign_up_password"
            android:layout_width="120dip"
            android:layout_height="35.0dip"
            android:background="@drawable/rounded_input"
            android:gravity="center_vertical"
            android:inputType="textPassword"
            android:maxLength="16"
            android:maxLines="1"
            android:textColor="#ff1d1d1d"
            android:layout_weight="1"
            android:layout_gravity="right"
            android:textSize="10sp" />
        </LinearLayout>
        
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip"
        android:orientation="horizontal"
        android:gravity="right" 
        android:layout_weight="1" >
            	
    	
           <TextView
            android:id="@+id/sign_up_re_password_text"
            android:layout_width="wrap_content"
            android:layout_height="35dip"
            android:gravity="right|center_vertical"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:layout_marginRight="8.0dip"
            android:textColor="#FFFFFF"
            android:text="Confirm Password"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/sign_up_re_passoword"
            android:layout_width="166dip"
            android:layout_height="35.0dip"
            android:background="@drawable/rounded_input"
            android:gravity="center_vertical"
            android:inputType="textPassword"
            android:maxLength="16"
            android:maxLines="1"
            android:textColor="#ff1d1d1d"
            android:textColorHint="#ff666666"
            android:layout_weight="1"
            android:layout_gravity="right"
            android:textSize="10sp" />
        
        </LinearLayout>
        


    
       </LinearLayout>

    </RelativeLayout>

</FrameLayout>

