<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="#85aab7" >

    <LinearLayout
        android:id="@+id/update_profile_top_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0.0dip"
        android:orientation="horizontal"
        android:layout_marginLeft="16.0dip"
    	android:layout_marginRight="16.0dip" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/profile" />


            <Button
                android:id="@+id/update_profile_save_button"
                android:layout_width="match_parent"
                android:layout_height="35dip"
                android:background="@drawable/rounded_button"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:text="Update"
                android:textSize="10sp"
            	android:textColor="#FFFFFF" />
    </LinearLayout>
   
            

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="16.0dip"
        android:layout_marginRight="16.0dip"
        android:layout_below="@+id/update_profile_top_linearLayout" >
            
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0.0dip"
        android:orientation="horizontal"
        android:gravity="right" 
        android:layout_weight="1" >

          <TextView
              android:layout_width="70dip"
              android:layout_height="35dip"
              android:layout_gravity="right"
              android:layout_marginRight="8.0dip"
              android:layout_weight="1"              
			  android:gravity="right|center_vertical"
			  android:textColor="#FFFFFF"
              android:textSize="12sp"
              android:text="Nickname" />

        <EditText
            android:id="@+id/update_profile_nickname"
            android:layout_width="150dip"
            android:layout_height="35dip"
            android:background="@drawable/rounded_input"
            android:ems="10"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:singleLine="true"
            android:layout_weight="1"
            android:textSize="10sp"
            android:layout_gravity="right" >

            <requestFocus />
        </EditText>
       
	</LinearLayout>
	
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip"
        android:orientation="horizontal"
        android:gravity="right" 
        android:layout_weight="1" >
      
                  
          <TextView
              android:layout_width="70dip"
              android:layout_height="35dip"
              android:layout_gravity="right"
              android:layout_marginRight="8.0dip"
              android:layout_weight="1"              
			  android:gravity="right|center_vertical"
			  android:textColor="#FFFFFF"
              android:textSize="12sp"
              android:text="Native Language" />    
         
        <EditText
            android:id="@+id/update_profile_native_language"
            android:layout_width="150dip"
            android:layout_height="35dip"
            android:background="@drawable/rounded_input"
            android:ems="10"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:singleLine="true"
            android:layout_weight="1"
            android:textSize="10sp"
            android:layout_gravity="right" >
        </EditText>
        
     </LinearLayout>
        
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip"
        android:orientation="horizontal" >
          
        <TextView
              android:layout_width="70dip"
              android:layout_height="35dip"
              android:layout_gravity="right"
              android:layout_marginRight="8.0dip"
              android:layout_weight="1"              
			  android:gravity="right|center_vertical"
			  android:textColor="#FFFFFF"
              android:textSize="12sp"
        android:text="Favorite Food" />
        
         <EditText
            android:id="@+id/update_profile_favorite_food"
            android:layout_width="150dip"
            android:layout_height="35dip"
            android:layout_weight="1"
            android:background="@drawable/rounded_input"
            android:ems="10"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:singleLine="true"
            android:textSize="10sp"
            android:layout_gravity="right" >
        </EditText>
       
     </LinearLayout>
     
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip"
        android:orientation="horizontal" >
    
           
       <TextView
              android:layout_width="70dip"
              android:layout_height="35dip"
              android:layout_gravity="right"
              android:layout_marginRight="8.0dip"
              android:layout_weight="1"              
			  android:gravity="right|center_vertical"
			  android:textColor="#FFFFFF"
              android:textSize="12sp"
        android:text="Suburb" />
        
        <EditText
            android:id="@+id/update_profile_suburb"
            android:layout_width="150dip"
            android:layout_height="35dip"
            android:background="@drawable/rounded_input"
            android:ems="10"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:singleLine="true"
            android:textSize="10sp"
            android:layout_weight="1"
            android:layout_gravity="right" >
        </EditText>
        
     </LinearLayout>
     
     </LinearLayout>
     

<ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout2"
            android:layout_marginBottom="16dip"
            android:layout_marginTop="6.0dip"
            android:layout_marginLeft="16.0dip"
        	android:layout_marginRight="16.0dip"
            android:background="@drawable/rounded_background"> 
     
  <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

         >
        
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1.0dip"
        android:orientation="horizontal" >
    
       <TextView
              android:layout_width="70dip"
              android:layout_height="20dip"
              android:layout_gravity="right"
              android:layout_marginRight="8.0dip"
              android:layout_weight="1"              
			  android:gravity="right|center_vertical"
			  android:textColor="#FFFFFF"
              android:textSize="12sp"
        android:text="Student ID" />
       
       <TextView
        android:id="@+id/update_profile_studentId_text"
        android:layout_width="150dip"
        android:layout_height="20dip"
		android:textSize="12sp"
        android:layout_weight="1"
        android:textColor="#FFFFFF"
        android:gravity="left|center_vertical"
        android:layout_gravity="right" />
        
    </LinearLayout>
    
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1.0dip"
        android:orientation="horizontal" >
	       <TextView
              android:layout_width="70dip"
              android:layout_height="20dip"
              android:layout_gravity="right"
              android:layout_marginRight="8.0dip"
              android:layout_weight="1"              
			  android:gravity="right|center_vertical"
			  android:textColor="#FFFFFF"
              android:textSize="12sp"
	           android:text="Name " />

	       <TextView
	        android:id="@+id/update_profile_name_text"
	        android:layout_width="150dip"
	        android:layout_height="20dip"
	        android:textSize="12sp"
	        android:layout_weight="1" 
        	android:textColor="#FFFFFF"
        	android:gravity="left|center_vertical"
        	android:layout_gravity="right" />
     </LinearLayout>
     
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1.0dip"
        android:orientation="horizontal">	       
          	       <TextView
              android:layout_width="70dip"
              android:layout_height="20dip"
              android:layout_gravity="right"
              android:layout_marginRight="8.0dip"
              android:layout_weight="1"              
			  android:gravity="right|center_vertical"
			  android:textColor="#FFFFFF"
              android:textSize="12sp"
	           android:text="Latitude " />

	       <TextView
	           android:id="@+id/update_profile_latitude_text"
	           android:layout_width="150dip"
	           android:layout_height="20dip"
	           android:layout_gravity="right"
	           android:layout_weight="1"
	           android:textSize="12sp"
	           android:textColor="#FFFFFF"
	           android:gravity="left|center_vertical" />
	  </LinearLayout>
	  
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1.0dip"
        android:orientation="horizontal" >
	       
          	       <TextView
              android:layout_width="70dip"
              android:layout_height="20dip"
              android:layout_gravity="right"
              android:layout_marginRight="8.0dip"
              android:layout_weight="1"              
			  android:gravity="right|center_vertical"
			  android:textColor="#FFFFFF"
              android:textSize="12sp"
	           android:text="Longitude " />      

	       <TextView
	        android:id="@+id/update_profile_longitude_text"
	        android:layout_width="150dip"
	        android:layout_height="20dip"
	        android:textSize="12sp"
	        android:layout_weight="1" 
        	android:textColor="#FFFFFF"
        	android:gravity="left|center_vertical"
        	android:layout_gravity="right" />
     </LinearLayout>
     
      
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1.0dip"
        android:orientation="horizontal" >

	       <TextView
              android:layout_width="70dip"
              android:layout_height="20dip"
              android:layout_gravity="right"
              android:layout_marginRight="8.0dip"
              android:layout_weight="1"              
			  android:gravity="right|center_vertical"
			  android:textColor="#FFFFFF"
              android:textSize="12sp"
	        android:text="Course " />

	       <TextView
	        android:id="@+id/update_profile_course_text"
	        android:layout_width="150dip"
	        android:layout_height="wrap_content"
			android:textSize="12sp"
	        android:layout_weight="1" 
        	android:layout_gravity="right"
        	android:textColor="#FFFFFF"  />
     </LinearLayout>
     
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1.0dip"
        android:orientation="horizontal" >
  
	       <TextView
              android:layout_width="70dip"
              android:layout_height="20dip"
              android:layout_gravity="right"
              android:layout_marginRight="8.0dip"
              android:layout_weight="1"              
			  android:gravity="right|center_vertical"
			  android:textColor="#FFFFFF"
              android:textSize="12sp"
	        android:text="Unit " />

	       <TextView
	        android:id="@+id/update_profile_unit_text"
	        android:layout_width="150dip"
	        android:layout_height="wrap_content"
			android:layout_weight="1" 
        	android:textSize="12sp"
        	android:layout_gravity="right"
        	android:textColor="#FFFFFF"   />
     </LinearLayout>
     
    </LinearLayout>
</ScrollView>

</RelativeLayout>